{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*":[
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "dist"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
